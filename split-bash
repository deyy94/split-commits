#!/bin/bash
set -e

BASE_BRANCH="main"
SOURCE_BRANCH="Ejemplo1"
LIMIT=2000

# 1) Validar que estemos en un repo Git y que SOURCE_BRANCH exista
if ! git rev-parse --is-inside-work-tree &>/dev/null; then
  echo "âŒ No estÃ¡s en un repositorio Git."
  exit 1
fi
if ! git rev-parse --verify "$SOURCE_BRANCH" &>/dev/null; then
  echo "âŒ La rama '$SOURCE_BRANCH' no existe."
  exit 1
fi

# 2) Detectar el punto donde SOURCE_BRANCH diverge de BASE_BRANCH
BASE_COMMIT=$(git merge-base "$BASE_BRANCH" "$SOURCE_BRANCH")
echo "ðŸ“ Punto base de '$SOURCE_BRANCH': $BASE_COMMIT"

# 3) Listar todos los commits en orden (cronolÃ³gico) sin merges
COMMITS=( $(git rev-list --reverse --no-merges "$BASE_COMMIT".."$SOURCE_BRANCH") )
echo "ðŸ” Total de commits a procesar: ${#COMMITS[@]}"

# 4) Agrupar hashes de commits en lotes de â‰¤ LINE_LIMIT lÃ­neas
declare -a GROUPS
declare -a CURR_GROUP
CURR_SUM=0

for C in "${COMMITS[@]}"; do
  # contar lÃ­neas modificadas (insertadas + eliminadas) en el commit
  LINES=$(git show --numstat --format="" "$C" | awk '{a+=$1; d+=$2} END{print a+d}')
  LINES=${LINES:-0}

  # si agregar este commit supera el lÃ­mite, cerramos el grupo actual
  if (( CURR_SUM + LINES > LINE_LIMIT )); then
    GROUPS+=("$(printf "%s " "${CURR_GROUP[@]}")")
    CURR_GROUP=(); CURR_SUM=0
  fi

  # aÃ±adir commit al grupo
  CURR_GROUP+=("$C")
  CURR_SUM=$((CURR_SUM + LINES))
done

# aÃ±adir el Ãºltimo grupo si no estÃ¡ vacÃ­o
if (( CURR_SUM > 0 )); then
  GROUPS+=("$(printf "%s " "${CURR_GROUP[@]}")")
fi

echo "âœ… Se formaron ${#GROUPS[@]} grupos de commits."

# 5) Para cada grupo, crear una rama nueva y cherry-pick de sus commits
i=1
for G in "${GROUPS[@]}"; do
  NEW_BRANCH="${SOURCE_BRANCH}-parte-${i}"
  echo "ðŸš€ Creando '$NEW_BRANCH' con ${#G[@]} commitsâ€¦"

  # crear la rama desde BASE_COMMIT
  git branch "$NEW_BRANCH" "$BASE_COMMIT"
  git checkout "$NEW_BRANCH"

  # aplicar cada commit del grupo (omitiendo conflictos)
  for H in $G; do
    if ! git cherry-pick "$H" &>/dev/null; then
      echo "   âš ï¸ Omitido $H (conflicto o error)."
      git cherry-pick --abort &>/dev/null
    fi
  done

  ((i++))
done

echo "ðŸŽ‰ Â¡Hecho! Se crearon $((i-1)) ramas desde '$SOURCE_BRANCH'."

#!/bin/bash
set -e

BASE_BRANCH="main"
SOURCE_BRANCH="Ejemplo1"
LIMIT=2000

if ! git rev-parse --is-inside-work-tree &>/dev/null; then
  echo "âŒ No estÃ¡s en un repositorio Git vÃ¡lido."
  exit 1
fi

if ! git rev-parse --verify "$SOURCE_BRANCH" &>/dev/null; then
  echo "âŒ La rama '$SOURCE_BRANCH' no existe."
  exit 1
fi

BASE_COMMIT=$(git merge-base "$BASE_BRANCH" "$SOURCE_BRANCH")
echo "ðŸ“ Punto base: $BASE_COMMIT"

COMMITS=($(git rev-list --reverse "$BASE_COMMIT".."$SOURCE_BRANCH"))
echo "ðŸ” Commits encontrados: ${#COMMITS[@]}"

GROUP=()
GROUP_TOTAL=0
GROUP_NUM=1

# Esta variable guardarÃ¡ la rama anterior para partir de ella
PREV_BRANCH=""

for COMMIT in "${COMMITS[@]}"; do
  LINES=$(git show --numstat --format="" "$COMMIT" | awk '{ add += $1; del += $2 } END { print add + del }')
  LINES=${LINES:-0}

  if (( GROUP_TOTAL + LINES > LIMIT )); then
    BRANCH_NAME="${SOURCE_BRANCH}-parte-${GROUP_NUM}"
    echo "ðŸš€ Creando rama $BRANCH_NAME con $GROUP_TOTAL lÃ­neas..."

    if [[ -z "$PREV_BRANCH" ]]; then
      # Primera rama, parte desde BASE_COMMIT
      git branch "$BRANCH_NAME" "$BASE_COMMIT"
    else
      # Siguientes ramas parten de la anterior
      git branch "$BRANCH_NAME" "$PREV_BRANCH"
    fi

    git checkout "$BRANCH_NAME"

    for C in "${GROUP[@]}"; do
      git cherry-pick "$C"
    done

    PREV_BRANCH="$BRANCH_NAME"

    GROUP=()
    GROUP_TOTAL=0
    GROUP_NUM=$((GROUP_NUM + 1))
  fi

  GROUP+=("$COMMIT")
  GROUP_TOTAL=$((GROUP_TOTAL + LINES))
done

if (( ${#GROUP[@]} > 0 )); then
  BRANCH_NAME="${SOURCE_BRANCH}-parte-${GROUP_NUM}"
  echo "ðŸš€ Creando rama $BRANCH_NAME con $GROUP_TOTAL lÃ­neas..."

  if [[ -z "$PREV_BRANCH" ]]; then
    git branch "$BRANCH_NAME" "$BASE_COMMIT"
  else
    git branch "$BRANCH_NAME" "$PREV_BRANCH"
  fi

  git checkout "$BRANCH_NAME"

  for C in "${GROUP[@]}"; do
    git cherry-pick "$C"
  done
fi

echo "âœ… Proceso completado. Se crearon $GROUP_NUM ramas desde '$SOURCE_BRANCH'."
